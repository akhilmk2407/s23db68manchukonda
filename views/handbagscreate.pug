extends layout 
 
block content 
  h1= title 
 
  form(id='handbagsForm', action="/resource/handbags", method="POST") 
    div.form-group 
        label.handbagsAttr(for='brand') handbags brand
        input#brand(type='text', name='brand') 
    div.form-group 
        label.handbagsAttr(for='model') handbags model
        input#model(type='text', name='model') 
    div.form-group 
        label.handbagsAttr(for='color') handbags color 
        input#color(type='text', name='color') 
    div.form-group 
        label.handbagsAttr(for='price') handbags price 
        input#price(type='number', name='price') 
    input(type="submit") 
 
  script. 
    document.forms['handbagsForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 